
<%- include("partials/header"); -%>
<h1>Edit</h1>
<form class="" action="/compose/<%=id%>/edit?_method=PUT" method="POST">
    <div class="form-group">
        <label>Title</label>
        <input class="form-control" value="<%=title%>" type="text" name="postTitle">
        <label>Post</label>
        <textarea class="form-control" value="<%=content%>" name="postBody" rows="5" cols="30"></textarea>
    </div>
    <button class="btn btn-primary" type="submit" name="button">Edit</button>
</form>

<%- include("partials/footer"); -%>
